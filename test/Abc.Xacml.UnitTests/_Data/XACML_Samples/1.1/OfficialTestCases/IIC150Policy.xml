<?xml version="1.0" encoding="UTF-8"?>
<Policy
      xmlns="urn:oasis:names:tc:xacml:1.0:policy"
      xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
      xsi:schemaLocation="urn:oasis:names:tc:xacml:1.0:policy
        cs-xacml-schema-policy-01.xsd"
      PolicyId="urn:oasis:names:tc:xacml:1.0:conformance-test:IIC150:policy"
      RuleCombiningAlgId="urn:oasis:names:tc:xacml:1.0:rule-combining-algorithm:deny-overrides">
    <Description>
        Policy for Conformance Test IIC150.
    </Description>
    <Target>
        <Subjects>
            <AnySubject/>
        </Subjects>
        <Resources>
            <AnyResource/>
        </Resources>
        <Actions>
            <AnyAction/>
        </Actions>
    </Target>
    <Rule
          RuleId="urn:oasis:names:tc:xacml:1.0:conformance-test:IIC150:rule"
          Effect="Permit">
        <Condition FunctionId="urn:oasis:names:tc:xacml:1.0:function:dayTimeDuration-equal">
            <Apply FunctionId="urn:oasis:names:tc:xacml:1.0:function:dayTimeDuration-one-and-only">
                <SubjectAttributeDesignator
                      AttributeId="urn:oasis:names:tc:xacml:1.0:conformance-test:test-attr"
                      DataType="http://www.w3.org/TR/2002/WD-xquery-operators-20020816#dayTimeDuration"/>
            </Apply>
            <AttributeValue
                  DataType="http://www.w3.org/TR/2002/WD-xquery-operators-20020816#dayTimeDuration">P50DT5H4M3S</AttributeValue>
        </Condition>
    </Rule>
</Policy>
